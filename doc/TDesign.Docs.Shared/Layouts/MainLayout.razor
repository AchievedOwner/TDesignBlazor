@inherits LayoutComponentBase

<TLayout AdditionalStyle="overflow:hidden;height:100vh;">
    <HeaderContent>
        <TMenu AdditionalStyle="box-shadow: inset 0 -1px 0 #e7e7e7;padding:0 24px;">
            <LogoContent>
                <img alt="TDesign Logo" width="100" src="https://tdesign.gtimg.com/site/TDesign.png">
                &nbsp;&nbsp;
                <h2><i>基于 TDesign 的 Blazor 企业级组件库</i></h2>
            </LogoContent>
            <OperationContent>
                <a href="https://tdesign.tencent.com/" title="官网" target="_blank" style="text-decoration:none">
                    <img src="favicon.png" style="width: 40px;height: 40px;display: flex;align-content: center;justify-content: center;align-items: center;padding: 8px;flex-wrap: nowrap;" />
                </a>
                <a href="https://github.com/AchievedOwner/TDesign" title="源码" target="_blank" style="text-decoration:none">
                    <TIcon Name="IconName.LogoGithubFilled" style="display: flex;align-content: center;justify-content: center;align-items: center;flex-wrap: nowrap;font-size: 30px;color: black;" />
                </a>
            </OperationContent>
        </TMenu>
    </HeaderContent>
    <LeftSideContent>
        <div style="overflow-y:auto;height:95vh;overflow-x:hidden">
            <NavMenu />
        </div>
    </LeftSideContent>
    <ChildContent>
        <div style="padding:24px;background:#fff;height:88vh;overflow-y:auto;overflow-x:hidden">
            @Body
        </div>
    </ChildContent>
    <FooterContent>
        <div style="text-align:center;height:100vh">
            TDesign © William 2022 当前版本 v0.1
        </div>
    </FooterContent>
</TLayout>
