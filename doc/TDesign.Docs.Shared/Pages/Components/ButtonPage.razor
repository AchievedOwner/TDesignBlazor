    <RunContent>
        <TButton OnClick="@(e=>JS.InvokeVoidAsync("alert","按钮被点击"))">点击我</TButton>
    </RunContent>
    <CodeContent>
        @Code.Create(@"
```html
<TButton OnClick=""@(e=>JS.InvokeVoidAsync(""alert"",""按钮被点击""))"">点击我</TButton>
```
")
    </CodeContent>
</Example>
